#include <iostream>

using namespace std;


int menu(int num) {
    int deposit_amount, withdrawal_amount;
    static int amount = 0;
    switch (num) {
        case 1 :
            cout << "Here code";//seif
            return 'y';
            break;
        case 2 :
            cout << "Enter the deposit amount: ";
            cin >> deposit_amount;
            if (deposit_amount <= 31E3 && deposit_amount >= 50) {
                amount += deposit_amount;
                cout << "New balance: " << amount << endl;
            } else {
                cout << "Invalid deposit amount.\n";
            }
            return 'y';
            break; // Return to the main menu after deposit amount
        case 3 :
            cout << "Enter the withdrawal amount: ";
            cin >> withdrawal_amount;
            if (withdrawal_amount >= 50) {
                if (amount - withdrawal_amount >= 0) {
                    amount -= withdrawal_amount;
                    cout << "New balance: " << amount << endl;
                } else {
                    cout << "Insufficient balance.\n";
                }
            }
            return 'y';
            break; // Return to the main menu after withdrawal_amount
        case 4 :
            cout << "Here change currency"; //seif
            break; // Return to the main menu after changing currency
        case 5 :
            return 'n';
            break; // Exit the program
        default :
            cout << "Invalid option. Please try again.\n";
            return 'y';
            break; // Return to the main menu after invalid option
    }

}

int main() {
    int num;
    char charValue ,y_OR_n = 'y';
    while (y_OR_n == 'Y' || y_OR_n == 'y') {
        cout << "****** Menu oprations ******\n\n";
        cout << "1. Check balance\n";
        cout << "2. Deposit\n";
        cout << "3. withdraw\n";
        cout << "4. Change currency\n";
        cout << "5. Exit";
        cout << "\nEnter your choice: ";  // Prompt user for input
        cin >> num;
        charValue = menu(num);
        if (charValue == 'y') {
            cout << "\nDo you want to continue? (y/n): ";
            cin >> y_OR_n;
        }
    }
    cout << "Thank you for using our services";
    return 0;
}
